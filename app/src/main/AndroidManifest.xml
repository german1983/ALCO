<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arenoclif.alco">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.arenoclif.alco.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.arenoclif.alco.SelectorAlimentosActivity"
            android:label="@string/title_activity_buscador_alimentos"
            android:parentActivityName="com.arenoclif.alco.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arenoclif.alco.MainActivity" />
        </activity>
        <activity
            android:name="com.arenoclif.alco.AlimentoDetailActivity"
            android:label="@string/title_activity_buscador_alimentos"
            android:parentActivityName="com.arenoclif.alco.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arenoclif.alco.MainActivity" />
        </activity>
        <activity
            android:name="com.arenoclif.alco.RegistroComidasActivity"
            android:label="@string/title_activity_buscador_alimentos"
            android:parentActivityName="com.arenoclif.alco.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.arenoclif.alco.MainActivity" />
        </activity>
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>
